import ScrollingText from "../components/scrollingText.svelte"
---

<Layout title="Welcome to Astro.">
  <main class="grid grid-cols-1">
    <ScrollingText
      client:load
      textOne="Some random words"
      textTwo="Some random words"
      textThree="Some random words"
    />

    <section class="container-center border-y-2 border-black-muted">
      <!-- left grid -->
      <article class="border-r-2 border-black-muted px-2">
